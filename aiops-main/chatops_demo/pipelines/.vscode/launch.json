{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", // Python 模块
                "--host",
                "0.0.0.0", // 监听所有 IP
                "--port",
                "9099", // 端口号
                "--forwarded-allow-ips",
                "*", // 转发 IP
                "--reload" // 自动重载
            ],
            "env": {
                "PORT": "9099" // 如果需要 PORT 环境变量
            },
            "jinja": true // 如果你用到了 Jinja 模板引擎
        }
    ]
}